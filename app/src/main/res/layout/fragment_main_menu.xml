<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cocktail"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/cabinetButton"
        android:layout_width="134dp"
        android:layout_height="75dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="132dp"
        android:text="Liquor Cabinet"
        app:layout_constraintBottom_toTopOf="@+id/triviaButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appLogo" />

    <Button
        android:id="@+id/recipesButton"
        android:layout_width="134dp"
        android:layout_height="75dp"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="132dp"
        android:text="Search Recipes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/triviaButton" />

    <Button
        android:id="@+id/triviaButton"
        android:layout_width="134dp"
        android:layout_height="75dp"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="132dp"
        android:text="Liquor Trivia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cabinetButton" />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="379dp"
        android:layout_height="146dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="60dp"
        android:rotation="-17"
        app:layout_constraintBottom_toTopOf="@+id/cabinetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo3" />

</androidx.constraintlayout.widget.ConstraintLayout>